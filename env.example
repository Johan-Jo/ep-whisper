# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_organization_id_here

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Development Settings
NODE_ENV=development

# Audio Processing Settings
NEXT_PUBLIC_MAX_AUDIO_SIZE=26214400  # 25MB in bytes
NEXT_PUBLIC_AUDIO_TIMEOUT=30000      # 30 seconds

# Voice Activity Detection
NEXT_PUBLIC_VAD_SILENCE_THRESHOLD=1000
NEXT_PUBLIC_VAD_MIN_RECORDING_DURATION=500
NEXT_PUBLIC_VAD_CONFIDENCE_THRESHOLD=0.7