# EP-Whisper Environment Variables

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Swedish Language Configuration
DEFAULT_LANGUAGE=sv-SE
DECIMAL_SEPARATOR=,

# Labor Pricing (SEK per hour)
DEFAULT_LABOR_PRICE_PER_HOUR=500

# Global Markup Percentage
DEFAULT_MARKUP_PERCENTAGE=10

# Voice Processing
VOICE_CONFIDENCE_THRESHOLD=0.7
VOICE_ACTIVITY_DETECTION=true

# Performance Targets
TARGET_TIME_TO_RESULT_SECONDS=60

# GDPR and Privacy
AUDIT_LOG_RETENTION_DAYS=30
STORE_RAW_AUDIO=false

# Development
NODE_ENV=development
DEBUG=false
